{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"allowJs": false,
		"target": "ES2015",
		"removeComments": false,
		"esModuleInterop": true,
		"alwaysStrict": true,
		"noUnusedLocals": false,
		"pretty": true,
		"sourceMap": true,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "./lib",
		"paths": {
			"src": [
				"./src"
			]
		},
		"typeRoots": [
			"node_modules/@types"
		],
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}