{
	"editor.tabSize": 2,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"vue",
		"typescript",
		"typescriptreact"
	],
	"eslint.format.enable": true,
	"prettier.requireConfig": true,
	// 保存时使用VSCode 自身格式化程序格式化
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.organizeImports": "explicit"
	}
}